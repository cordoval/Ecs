{% extends '::base.html.twig' %}

{% block title %}Emmediate Credit Solutions{% endblock %}

{% block styles %}
    {{ parent() }}
{% endblock %}

{% block scripts %}

{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ entity.price }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Reoccurring</th>
            <td>{{ entity.reoccurring }}</td>
        </tr>
        <tr>
            <th>Billfrequency</th>
            <td>{{ entity.billFrequency }}</td>
        </tr>
        <tr>
            <th>Billtimes</th>
            <td>{{ entity.billTimes }}</td>
        </tr>
        <tr>
            <th>Trial</th>
            <td>{{ entity.trial }}</td>
        </tr>
        <tr>
            <th>Triallength</th>
            <td>{{ entity.trialLength }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('products') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('products_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('products_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %} 