{% extends '::base.html.twig' %}

{% block title %}Emmediate Credit Solutions{% endblock %}

{% block styles %}
    {{ parent() }}
{% endblock %}

{% block scripts %}

{% endblock %}

{% block content %}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Reoccurring</th>
                <th>Billfrequency</th>
                <th>Billtimes</th>
                <th>Trial</th>
                <th>Triallength</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('products_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.reoccurring }}</td>
                <td>{{ entity.billFrequency }}</td>
                <td>{{ entity.billTimes }}</td>
                <td>{{ entity.trial }}</td>
                <td>{{ entity.trialLength }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('products_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('products_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('products_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %} 