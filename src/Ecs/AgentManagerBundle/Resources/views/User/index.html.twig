{% extends '::base.html.twig' %}

{% block title %}Agents{% endblock %}

{% block styles %}
    {{ parent() }}
{% endblock %}

{% block scripts %}

{% endblock %}

{% block content %}

<h1>Employees</h1>

<table class="records_list table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Active</th>
            <th>First_name</th>
            <th>Last_name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('agentmanager_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.enabled }}</td>
            <td>{{ entity.firstname }}</td>
            <td>{{ entity.lastname }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('agentmanager_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('agentmanager_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('agentmanager_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}